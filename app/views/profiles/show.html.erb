<h2><%= @profile.user.email %></h2>

<div class="well well-lg">
<p><%= gender(@profile.gender) %> seeking <%= gender(@profile.seeking_gender) %></p>

<p>
  <strong>Age:</strong> <%= @profile.age %>
</p>
</div>


<% if @profile.user.trips.count > 0 %>
<h3>Trips</h3>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Destination</th>
        <th>From</th>
        <th>Until</th>
      </tr>
    </thead>
<% @profile.user.trips.each do |trip| %>
    <tr>
      <td><%= trip.destination_name %></td>
      <td><%= trip.start_date.to_formatted_s(:short) %></td>
      <td><%= trip.end_date.to_formatted_s(:short) %></td>
    </tr>
<% end %>
</table>
<% else %>
<h3>No upcoming Trips</h3>
<% end %>
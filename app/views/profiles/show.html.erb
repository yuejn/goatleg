<h2><%= @profile.user.email %></h2>

<p><%= gender(@profile.gender) %> seeking <%= gender(@profile.seeking_gender) %></p>

<p>
  <strong>Age:</strong> <%= @profile.age %>
</p>

<% assoc_trips = Trip.where(user_id: @profile.id) %>

<h3>Trips</h3>

<% if assoc_trips.count > 0 %>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Destination</th>
        <th>From</th>
        <th>Until</th>
      </tr>
    </thead>
  <% assoc_trips.all.each do |trip| %>
    <tr>
      <td><%= trip.destination_name %></td>
      <td><%= trip.start_date.to_formatted_s(:short) %></td>
      <td><%= trip.end_date.to_formatted_s(:short) %></td>
    </tr>
  <% end %>
  </table>
<% else %>

<p>No trips available!</p>

<% end %>
<table class="table table-striped table-bordered table-hover">
<thead>
  <tr>
    <th>E-mail</th>
    <th>Age</th>
    <th>Gender</th>
    <th>Seeking</th>
    <th>Destination</th>
    <th>Arrives</th>
    <th>Departs</th>
  </tr>
</thead>

<tbody>
<% @trips.each do |trip| %>
<tr>
  <td><%= User.find(trip.user_id).email %></td>
  <td><%= Profile.find(trip.user_id).age %></td>
  <td><%= gender(trip.user_id) %></td>
  <td><%= seeking_gender(trip.user_id) %></td>
  <td><%= link_to(trip.destination_name, trips_path(:destination => trip.destination)) %></td>
  <!-- <td><%= trip.destination_name %></td> -->
  <td><%= trip.start_date.to_formatted_s(:short) %></td>
  <td><%= trip.end_date.to_formatted_s(:short) %></td>
</tr>
<% end %>
</tbody>

</table>
<h2>Trips</h2> 
<table class="table table-striped table-bordered table-hover">
<thead>
  <tr>
    <th>E-mail</th>
    <th>Age</th>
    <th>Gender</th>
    <th>Seeking</th>
    <th>Destination</th>
    <th>Arrives</th>
    <th>Departs</th>
  </tr>
</thead>

<tbody>
<% @trips.each do |trip| %>
  <tr<%= trip.end_date.past? ? " class=\"active\"".html_safe : nil %>>
    <td><%= link_to(trip.user.profile.username, profile_path(trip.user.profile.id)) %></td>
    <td><%= trip.user.profile.age %></td>
    <td><%= link_to(trip.user.profile.gender, trips_path(:gender => trip.user.profile.gender)) %></td>
    <td><%= trip.user.profile.seeking_gender %></td>
    <td><%= link_to(trip.destination_name, trips_path(:destination => trip.destination)) %></td>
    <td><%= trip.start_date.to_formatted_s(:short) %></td>
    <td><%= trip.end_date.to_formatted_s(:long) %></td>
  </tr>

<% end %>
</tbody>

</table>